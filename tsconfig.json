{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "ES2019",
        ],
        "target": "ES2019",
        "module": "CommonJS",
        "moduleResolution": "Node",
        // "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
    ]
}
